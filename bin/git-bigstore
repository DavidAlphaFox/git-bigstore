#!/usr/bin/env python
# vim: set filetype=python

import os
import sys
import git
from bigstore import sync, filter_clean, filter_smudge, mkdir_p, init

def print_help():
    print """usage: git bigstore init|sync

   init		Set up local repository to sync files
   sync		Upload local files and download remote ones
"""

length = len(sys.argv)

if length == 1:
    print_help()
elif sys.argv[1] == "init":
    init()
elif sys.argv[1] == "sync":
    sync()
elif sys.argv[1] == "filter-clean":
    filter_clean()
elif sys.argv[1] == "filter-smudge":
    filter_smudge()
else:
    print_help()

